}

###

# @name cadastrarConta
POST {{resourceUrl}}
Content-Type: application/json
authorization: Bearer {{accessToken}}

{
    "nome": "Lorem ipsum",
    "data": "2022-03-05",
    "valor": 10000,
    "parcelado": true,
    "numeroParcelas": 10,
    "observacao": "Lorem ipsum dolor sit amet, consectetur adipiscing elit.",
    "categoria": "{{idCategoria}}"
}

###

# @name atualizarConta
PUT {{resourceUrl}}
Content-Type: application/json
authorization: Bearer {{accessToken}}

{
    "id": "{{idConta}}",
    "nome": "Lorem ipsum",
    "data": "2022-03-05",
    "valor": 50000,
    "parcelado": true,
    "numeroParcelas": 60,
    "observacao": "Lorem ipsum dolor sit amet, consectetur adipiscing elit.",
    "categoria": "{{idCategoria}}"
}

###

# @name deletarConta
DELETE {{resourceUrl}}/{{idConta}}
authorization: Bearer {{accessToken}}

###

# @name obterTodasAsContas
GET {{resourceUrl}}
authorization: Bearer {{accessToken}}

###

# @name obterContaPorId
GET {{resourceUrl}}/{{idConta}}
authorization: Bearer {{accessToken}}

###

# @name deletarCategoria
DELETE {{categoriasUrl}}/{{idCategoria}}
authorization: Bearer {{accessToken}}