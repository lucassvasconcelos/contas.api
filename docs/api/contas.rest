@authUrl =  http://localhost:5000/auth
@categoriasUrl =  http://localhost:5000/categorias
@resourceUrl =  http://localhost:5000/contas
@idConta = {{cadastrarConta.response.body.$.id}}
@idCategoria = {{cadastrarCategoria.response.body.$.id}}
@accessToken = {{login.response.body.$.accessToken}}

